@model DemoCurd.Models.Author 

@{
    ViewData["title"] = "Author";
}

<div class="col-4">
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center active">
            Id
            <span class="">@Model.Id</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            First Name
            <span class="">@Model.FirstName</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Last Name
            <span class="">@Model.LastName</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Email
            <span class="">@Model.EmailAddress</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Phone
            <span class="">@Model.Phone</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Address
            <span class="">@Model.Address</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            City
            <span class="">@Model.City</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            State
            <span class="">@Model.State</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Zip
            <span class="">@Model.Zip</span>
        </li>
    </ul>
    <div class="text-center">
        <form asp-action="Index">
            <input type="submit" value="Back To The Main Menu" class="btn btn-primary btn-block margin-space-ten" />
        </form>
    </div>
</div>
