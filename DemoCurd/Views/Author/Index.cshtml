@model IEnumerable<DemoCurd.Models.Author>

@{
    ViewData["title"] = "Author";
}

<form asp-action="Create" class=" text-right">
    <input class="btn btn-outline-success margin-space-below-ten" value="Create New Author" type="submit"/>
</form>

<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Zip</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.EmailAddress</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.State</td>
                <td>@item.Zip</td>
                <td>
                    <a asp-controller="Author" asp-action="Details" asp-route-id="@item.Id">Details</a><br/>
                    <a asp-controller="Author" asp-action="Edit" asp-route-id="@item.Id">Edit</a><br />
                    <a asp-controller="Author" asp-action="Delete" asp-route-id="@item.Id">Delete</a><br />
                </td>
            </tr>
        }


    </tbody>
</table>
