@model DemoCurd.Models.Author

@{
    ViewData["title"] = "Author";
}

<div class="col-4 card">
    <h3 class="text-info text-center margin-space-ten">Author Id : @Model.Id</h3>
    <form asp-action="Edit">
        <div class="form-group">
            <input type="hidden"
                   class="form-control"
                   id="Id"
                   asp-for="Id"
                   asp-items="@Model.Id">
        </div>
        <div class="form-group">
            <label for="firstname">First Name</label>
            <input type="text"
                   asp-for="FirstName"
                   asp-items="@Model.FirstName"
                   class="form-control"
                   placeholder="Enter First Name">
        </div>
        <div class="form-group">
            <label for="lastname">Last Name</label>
            <input type="text"
                   asp-for="LastName"
                   asp-items="@Model.LastName"
                   class="form-control"
                   placeholder="Enter Last Name">
        </div>
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email"
                   asp-for="EmailAddress"
                   asp-items="@Model.EmailAddress"
                   class="form-control"
                   placeholder="Enter Email Address">
        </div>
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="text"
                   asp-for="Phone"
                   asp-items="@Model.Phone"
                   class="form-control"
                   placeholder="Enter Phone Number">
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text"
                   asp-for="Address"
                   asp-items="@Model.Address"
                   class="form-control"
                   placeholder="Enter Address">
        </div>
        <div class="form-group">
            <label for="city">City</label>
            <input type="text"
                   asp-for="City"
                   asp-items="@Model.City"
                   class="form-control"
                   placeholder="Enter City">
        </div>
        <div class="form-group">
            <label for="state">State</label>
            <input type="text"
                   asp-for="State"
                   asp-items="@Model.State"
                   class="form-control"
                   placeholder="Enter State">
        </div>
        <div class="form-group">
            <label for="zip">Zip</label>
            <input type="text"
                   asp-for="Zip"
                   asp-items="@Model.Zip"
                   class="form-control"
                   placeholder="Enter Zip">
        </div>
        <button type="submit" class="btn btn-primary btn-block margin-space-ten">Submit</button><br />
    </form>
</div>
<div class="col-4">
    <form asp-action="Index">
        <input type="submit" value="Back To The Main Menu" class="btn btn-primary btn-block margin-space-ten" />
    </form>
</div>