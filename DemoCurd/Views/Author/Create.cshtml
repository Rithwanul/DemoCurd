@model DemoCurd.Models.Author

@{
    ViewData["title"] = "Create";
}

<div class="col-4 card">

    <ul class="list-group">
        <li class="list-group-item card d-flex justify-content-between active margin-space-below-ten margin-space-ten">
            <span class="text-center text-capitalize">New Author</span>
        </li>
        <li class="list-group">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="firstname">First Name</label>
                    <input type="text"
                           asp-for="FirstName"
                           class="form-control"
                           placeholder="Enter First Name">
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name</label>
                    <input type="text"
                           asp-for="LastName"
                           class="form-control"
                           placeholder="Enter Last Name">
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email"
                           asp-for="EmailAddress"
                           class="form-control"
                           placeholder="Enter Email Address">
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="text"
                           asp-for="Phone"
                           class="form-control"
                           placeholder="Enter Phone Number">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text"
                           asp-for="Address"
                           class="form-control"
                           placeholder="Enter Address">
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text"
                           asp-for="City"
                           class="form-control"
                           placeholder="Enter City">
                </div>
                <div class="form-group">
                    <label for="state">State</label>
                    <input type="text"
                           asp-for="State"
                           class="form-control"
                           placeholder="Enter State">
                </div>
                <div class="form-group">
                    <label for="zip">Zip</label>
                    <input type="text"
                           asp-for="Zip"
                           class="form-control"
                           placeholder="Enter Zip">
                </div>
                <button type="submit" class="btn btn-primary btn-block margin-space-ten">Submit</button><br />
            </form>
        </li>
    </ul>

        
</div>
<div class="container">
    <div class="row">
        <div class="col-4">
            <form asp-action="Index" class="form-inline">
                <input type="submit" value="Back To The Main Menu" class="btn btn-primary btn-block margin-space-ten" />
            </form>
        </div>
    </div>
</div>

